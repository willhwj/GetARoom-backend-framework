{{#extends 'base'}}
{{#block 'content'}}
<a href="/rooms/create" class='btn btn-primary sm m-3 py-0'>Create New Room</a>
<table class='table m-3'>
    <thead>
        <tr>
            <th>ID</th>
            <th>Room Number</th>
            <th>Room Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each rooms}}
        <tr>
            <td>
                {{this.id}}
            </td>
            <td>
                {{this.room_number}}
            </td>
            <td>
                {{this.room_price}}
            </td>
            <td>
                <a href='/rooms/{{this.id}}/update' class='btn btn-primary btn-sm py-0 m-1' >Update</a>
                <a href='/rooms/{{this.id}}/delete' class='btn btn-danger btn-sm py-0 m-1' >Delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{/block}}
{{/extends}}