<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Hello, world!</title>

    {{! Bootstrap 5.1 CSS }}
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link href="../../forms/styles.css" rel="stylesheet" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Navbar</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="#">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/room-types">Room Type</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/rooms">Room</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/room-slots">Room Slot</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/amenities">Amenity</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/users/register">User</a>
            </li>
          </ul>
        </div>
      </div>
      <div>
        {{#if user}}
          Hi,
          {{user.username}}
          <a href="/users/logout" class="ml-3 btn btn-primary btn-sm">Logout</a>
        {{else}}
          Hi, stranger
          <a href="/users/login" class="ml-3 btn btn-primary btn-sm">Login</a>
        {{/if}}
      </div>
    </nav>

    <section class="container">
      {{#if success_messages}}
        {{#each success_messages}}
          <div class="alert alert-success">
            {{this}}
          </div>
        {{/each}}
      {{/if}}
      {{#if error_messages}}
        {{#each error_messages}}
          <div class="alert alert-danger">
            {{this}}
          </div>
        {{/each}}
      {{/if}}
    </section>
    <section>
      {{#block "content"}}{{/block}}
    </section>

    {{! Bootstrap 5.1 JS }}
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    {{!-- custom JS script to select form elements with readol class, and make these elements read-only by injecting the attribute 'readonly' --}}
    <script type="text/javascript">
      window.addEventListener('load', function() { 
          let target = document.getElementsByClassName('readol'); 
          let targetList = Array.prototype.slice.call(target); targetList.forEach((x)=> {
            x.setAttribute('readonly', 'readonly') 
            }); 
        })
    </script>
    {{#block "js"}}
    {{/block}}
  </body>
</html>